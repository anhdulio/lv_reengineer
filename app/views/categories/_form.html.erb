<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content, collection: %i[products contents blogs]%>
    <%= f.input :vi %>
    <%= f.input :en %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
