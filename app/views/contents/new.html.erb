<%= simple_form_for(@content, as: :content, url: contents_path) do |f| %>
  <%= f.hidden_field :type, value: @content.type %>

  <%= f.input :title %>

  <% @content.class.content_attributes.each do |attr_name, attr_type| %>
    <%= f.input attr_name, as: attr_type %>
  <% end %>

  <%= f.input :slug %>

  <%= f.button :submit %>
<% end %>