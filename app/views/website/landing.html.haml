#landing.slider.fullscreen
  %ul.slides
    %li
      %img{:src => "http://storage.googleapis.com/singular-pixel-4346/Public/landing1.jpg"}/
      .caption.first-text
        %blockquote
          %h3
            Gạo sạch
            %br chén cơm ngon
      .caption.buy
        %a.btn-large.pulse.primary-background{:href => "#contact-modal"}
          %i.material-icons.left> shopping_basket
          140,000 / 10kgs
      .caption.next
        %a.waves-effect.waves-light.btn.primary-background
          >>>
    %li
      %img{:src => "http://storage.googleapis.com/singular-pixel-4346/Public/landing-d.jpg", class: "hide-on-small-only"}/
      %img{:src => "http://storage.googleapis.com/singular-pixel-4346/Public/landing-m.jpg", class: "hide-on-med-and-up"}/
      .caption.previous
        %a.waves-effect.waves-light.btn.secondary-background
          <<<
