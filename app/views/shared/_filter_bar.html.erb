<div class='filter-bar'>
    <div class='container'>
        <div class='row'>
            <ul class='tabs'>
                <% @cats.each do |cat| %>
                    <li class='tab'><a href='#<%= cat.tableize %>'><%= cat.tableize %></a></li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
<div class='container contents'>
    <% @cats.each do |cat| %>
        <div id='<%= cat.tableize %>' class='col s12'>
            <div class='row'>
                <% @contents.each do |content| %>
                    <% if content.category.tableize == cat.tableize %>
                        <%# Content card start%>
                            <div class='col l4 m6 s12'>
                            <div class="card large hoverable">
                                <div class="card-image">
                                    <a href='<%= content_path(content.type, content.id) %>'><img src="<%= content.main_image %>"></a>
                                </div>
                                <div class="card-content">
                                <span class="card-title"><%= content.title %></span>
                                <p><%= content.short %><
                                </div>
                                <div class="card-action">
                                <a href="<%= content_path(content.type, content.id) %>">Read More ...</a>
                                </div>
                            </div>
                            </div>
                        <%# Content card end%>
                    <% end %>
                <% end %>
            </div>
        </div>

    <% end %>

</div>