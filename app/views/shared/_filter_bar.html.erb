<div class='filter-bar'>
    <div class='container'>
        <div class='row'>
            <ul class='tabs'>
                <li class='tab'><a href='#all-content' class='active'>all</a></li>
                <li class='tab'><a href='#content-1'>Filter 2</a></li>
                <li class='tab'><a href='#content-2'>Filter 3</a></li>
                <li class='tab'><a href='#content-3'>Filter 4</a></li>
            </ul>
        </div>
    </div>
</div>
<div class='container contents'>
    <div id='all-content' class='col s12'>
        <div class='row'>
            <% @contents.each do |key, content| %>
            <%# Content card start%>
                <div class='col l4 m6 s12'>
                <div class="card large hoverable">
                    <div class="card-image">
                    <a href='#'><img src="<%= content[:main_image] %>"></a>
                    </div>
                    <div class="card-content">
                    <span class="card-title"><%= content[:title] %></span>
                    <p><%= content[:short] %><%= content[:short] %></p>
                    </div>
                    <div class="card-action">
                    <a href="#">Read More ...</a>
                    </div>
                </div>
                </div>
            <%# Content card end%>
            <% end %>
        </div>
    </div>
    <div id='content-1' class='col s12'>
        Test 2
    </div>
    <div id='content-2' class='col s12'>
        Test 3
    </div>
    <div id='content-3' class='col s12'>
        Test 4
    </div>
</div>