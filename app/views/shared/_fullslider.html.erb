<div class="slider">
  <ul class="slides">
    <% @features.each do |feature| %>
      <li>
        <%= image_tag feature.main_image %>
        <div class="caption center-align">
          <h3><%= feature.title %></h3>
          <h5><%= feature.short %></h5>
        </div>
      </li>
    <% end %>
  </ul>
</div>